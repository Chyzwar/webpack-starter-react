{
  "name": "webpack-starter-react",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "eslint": "./node_modules/.bin/eslint",
    "webpack": "./node_modules/.bin/webpack",
    "webpack:server": "./node_modules/.bin/webpack-dev-server",

    "analyze": "npm run webpack -- --json | webpack-bundle-size-analyzer",
    "clean": "npm cache clean && rm -rf -- doc coverage build",

    "start": "npm run webpack:server -- --hot --inline --port 3000 --content-base build/ --config webpack/dev",
    "start:build": "npm run webpack:server -- --hot --inline --port 3000 --content-base build/ --config webpack/prod",
    "build": "npm run clean && npm run webpack -- --config webpack/prod",
    "build:prod": "npm run clean &&  npm run webpack -- -p --config webpack/prod",

    "lint": "npm run eslint -- src/"
  },
  "keywords": [
    "starter",
    "boilerplate",
    "webpack",
    "redux",
    "react",
    "bootstrap"
  ],
  "author": "Marcin Kopacz",
  "license": "MIT",
  "repository": "https://github.com/Chyzwar/webpack-starter-react",
  "devDependencies": {
    "eslint": "3.13.x",
    "eslint-config-airbnb": "14.0.x",
    "eslint-plugin-react": "6.9.x",
    "eslint-plugin-jsx-a11y": "3.x.x",
    "eslint-plugin-import": "2.2.x",

    "babel-loader": "*",
    "node-sass": "*",
    "raw-loader": "*",
    "css-loader": "*",
    "sass-loader": "*",
    "script-loader": "*",
    "style-loader": "*",
    "url-loader": "*",
    "file-loader": "*",

    "webpack": "^2.2.0-rc",
    "webpack-merge": "*",
    "webpack-dev-server": "^2.2.0-rc",
    "html-webpack-plugin": "*",
    "extract-text-webpack-plugin": "^2.0.0-beta",

    "babili": "*",
    "babel-core": "*",
    "babel-preset-es2015": "*",
    "babel-plugin-transform-react-jsx": "*",
    "babel-plugin-transform-class-properties": "*",
    "babel-plugin-transform-object-rest-spread": "*"
  },
  "dependencies": {
    "react": "15.x.x",
    "react-dom": "15.x.x",
    "redbox-react": "*",
    "react-redux": "^5.x.x",
    "react-router": "3.x.x",
    "redux": "^3.6.0",
    "redux-thunk": "^2.0.0",
    "lodash": "4.x.x",
    "bootstrap": "^4.0.0-alpha",
    "reactstrap": "*",
    "react-addons-transition-group": "*",
    "react-addons-css-transition-group": "*"
  }
}
